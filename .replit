modules = ["web", "bash", "nix", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "cargo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libiconv", "libxcrypt", "openssl", "pkg-config", "qhull", "rustc", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SquashPlot Beautiful UI"

[[workflows.workflow]]
name = "SquashPlot Beautiful UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/web_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
integrations = ["python_log_in_with_replit:1.0.0"]

[deployment]
deploymentTarget = "autoscale"
run = ["python", "production/src/squashplot_enhanced.py", "--check-tools"]
